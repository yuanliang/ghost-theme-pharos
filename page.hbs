{{!< default}}

{{#post}}


{{! The big cover on the left }}
<aside class="cover" 
	{{#if feature_image}} 
	    style="background: linear-gradient( rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.15) ), url({{img_url feature_image}});"
	{{else}}
		{{#if @site.cover_image}} 
		    style="background: linear-gradient( rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.15) ), url({{@site.cover_image}});"
        {{/if}}
	{{/if}}>
	
	<div class="cover-content">
		<div class="container">
		    {{#if @site.logo}}
            <div class="cover-logo">
               <a href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" class="small-logo"></a> 
            </div>            
            {{/if}}
			      {{!-- only show header if show_title_and_feature_image = true --}}
			{{#match @page.show_title_and_feature_image}}
				<header class="page-header gh-canvas">
				<h1 class="cover-headline">{{title}}</h1>
				{{!-- <h1 class="page-title">{{title}}</h1> --}}
{{!-- 
				{{#if feature_image}}
					<figure class="page-feature-image">
					<img src="{{img_url feature_image size="l"}}" alt="{{title}}">
					</figure>
				{{/if}} --}}
				</header>
			{{/match}}
		</div>		
	</div>
	{{! The tag below includes social links on the left - partials/social-links.hbs }}	
	{{> social-links}}
</aside>

{{! The main content area of the page on the right }}
<main class="content">
    <article class="article-content" role="article" itemscope itemtype="//schema.org/Article">
        <div class="container">
            <br>               
            {{content}}
            <br>
        </div>
	</article>
</main>
{{/post}}